<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "vertical"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:layout_marginLeft="@dimen/dimen_18dp"
              android:layout_marginRight="@dimen/dimen_18dp"
              android:layout_marginTop="@dimen/dimen_15dp"
android:paddingBottom="@dimen/dimen_10dp">
	<LinearLayout android:layout_width = "match_parent"
	              android:layout_height = "match_parent"
	              android:gravity="right"
	              android:orientation="horizontal">
		<android.support.v7.widget.AppCompatImageView
				android:id="@+id/img_night"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:src="@drawable/ic_night"/>
		<android.support.v7.widget.AppCompatImageView
				android:id="@+id/img_scancode"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:src="@drawable/ic_scancode"
		android:layout_marginLeft="@dimen/dimen_20dp"
		android:layout_marginRight="@dimen/dimen_20dp"/>
		<android.support.v7.widget.AppCompatImageView
				android:id="@+id/img_envelope"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:src="@drawable/ic_envelope"
				android:layout_toRightOf="@+id/img_scancode"/>
	</LinearLayout>
	<RelativeLayout
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
	android:layout_marginTop="@dimen/dimen_10dp">
		<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/img_head_portrait"
				android:layout_width="60dp"
				android:layout_height="60dp"
		android:src="@drawable/ic_header"/>
		<TextView
				android:id="@+id/txt_username"
				android:layout_width = "wrap_content"
		          android:layout_height = "wrap_content"
		          android:textColor="@color/txt_blank"
		        android:layout_toRightOf="@+id/img_head_portrait"
		          android:text="小白马1"
		          android:textSize="20sp"
		android:layout_marginLeft="@dimen/dimen_15dp"/>
		<TextView
				android:id="@+id/txt_sdytime"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:textColor="@color/txt_gray1"
				android:layout_below="@+id/txt_username"
				android:layout_toRightOf="@+id/img_head_portrait"
				android:text="学习时长 87小时"
				android:layout_marginTop="@dimen/dimen_10dp"
				android:layout_marginRight="@dimen/dimen_10dp"
				android:textSize="12sp"
				android:layout_marginLeft="@dimen/dimen_15dp"/>
		<TextView
				android:id="@+id/txt_experence"
				android:layout_width = "wrap_content"
		          android:layout_height = "wrap_content"
		android:textColor="@color/txt_gray1"
		android:textSize="12sp"
		        android:layout_marginTop="10dp"
		android:layout_toRightOf="@+id/txt_sdytime"
		        android:layout_below="@+id/txt_username"
				android:text="经验 2860"/>
	</RelativeLayout>
	<LinearLayout android:layout_width = "match_parent"
	              android:layout_height = "wrap_content"
	              android:layout_marginTop="@dimen/dimen_25dp"
	              android:gravity="center_vertical"
	              android:orientation="horizontal">
		<TextView
				android:id="@+id/txt_follow"
				android:layout_width = "0dp"
				android:layout_weight="1"
		          android:layout_height = "wrap_content"
		android:textSize="14sp"
		        android:gravity="center"
		android:textColor="@color/txt_gray1"
		android:text="关注 1"/>
		
		<View
				android:id="@+id/vertical_line"
				android:layout_width = "0.5dp"
		      android:layout_height = "@dimen/dimen_10dp"
				android:gravity="center"
				android:layout_marginLeft="@dimen/dimen_40dp"
				android:layout_marginRight="@dimen/dimen_40dp"
		      android:background="@color/txt_gray1"/>
		
		<TextView
				android:id="@+id/txt_fans"
				android:layout_width = "0dp"
				android:layout_weight="1"
				android:layout_height = "wrap_content"
				android:textSize="14sp"
				android:gravity="center"
				android:textColor="@color/txt_gray1"
				android:text="粉丝 1"/>
		<View android:layout_width = "0.5dp"
		      android:layout_height = "@dimen/dimen_10dp"
		      android:background="@color/txt_gray1"
		      android:gravity="center"
		      android:layout_marginLeft="@dimen/dimen_40dp"
		      android:layout_marginRight="@dimen/dimen_40dp"/>
		<TextView
				android:layout_width = "0dp"
				android:layout_weight="1"
				android:layout_height = "wrap_content"
				android:textSize="14sp"
				android:gravity="center"
				android:textColor="@color/txt_gray1"
				android:text="积分 1"/>
	</LinearLayout>
</LinearLayout>